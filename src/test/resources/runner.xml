<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="demoblaze test">
    <parameter name="useCloudEnv" value="false"></parameter>
    <parameter name="envName" value="browserstack"></parameter>
    <parameter name="osVersion" value="Sierra"></parameter>
    <parameter name="browserVersion" value="100"></parameter>

    <parameter name="os" value="OS X"></parameter>
    <parameter name="browser" value="chrome"></parameter>
    <parameter name="url" value="https://www.saucedemo.com/"></parameter>
    <test name="login test">
        <classes>
            <class name="com.demoblaze.LoginTest"></class>
        </classes>
    </test>
    <test name="Basic components test">
        <classes>
            <class name="com.demoblaze.BasicComponentsTest"></class>
        </classes>
    </test>
    <test name="signup test">
        <classes>
            <class name="com.demoblaze.SignupTest"></class>
        </classes>
    </test>
</suite>